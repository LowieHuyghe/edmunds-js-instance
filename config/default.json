{
  "app": {
    "name": "Edmunds Instance"
  },

  "filesystem": {
    "instances": [
      {
        "name": "local",
        "driver": "local",
        "path": "./storage/files"
      }
    ]
  },

  "logging": {
    "instances": [
      {
        "name": "rawconsole",
        "driver": "RawConsole"
      },
      {
        "name": "file",
        "driver": "File",
        "filename": "./storage/logs/error-log.txt",
        "level": "error"
      }
    ]
  },

  "cache": {
    "instances": [
      {
        "name": "memcached",
        "driver": "memcached"
      }
    ]
  }
}
