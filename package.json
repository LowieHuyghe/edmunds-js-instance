{
  "name": "edmunds-instance",
  "version": "0.0.1",
  "description": "Instance for Edmunds",
  "main": "dist/index.js",
  "scripts": {
    "start": "nodemon --watch src --ext ts --exec \"npm run tsc && npm run server:dev\"",
    "server:dev": "NODE_ENV=development DEBUG=express:* node dist/index.js",
    "server:stag": "NODE_ENV=staging DEBUG=express:* node dist/index.js",
    "server:prod": "NODE_ENV=production DEBUG=express:* node dist/index.js",

    "db:migrations:run": "npm run tsc && typeorm migrations:run",
    "db:migrations:revert": "npm run tsc && typeorm migrations:revert",

    "tsc": "rm -rf dist && tsc",
    "tsc:watch": "rm -rf dist && tsc --watch",

    "lint": "tslint -c tslint.json --exclude '**/*.d.ts' --exclude 'node_modules/**/*.ts' '**/*.ts'",
    "lint:watch": "nodemon --ext ts --exec npm run lint",

    "test": "NODE_ENV=testing mocha --opts mocha.opts '**/*.spec.ts'",
    "test:cover": "NODE_ENV=testing nyc mocha --opts mocha.opts '**/*.spec.ts'",
    "test:watch": "NODE_ENV=testing mocha --watch --opts mocha.opts '**/*.spec.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/LowieHuyghe/edmunds-js-instance.git"
  },
  "keywords": [
    "edmunds",
    "javascript"
  ],
  "author": "Lowie Huyghe",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/LowieHuyghe/edmunds-js-instance/issues"
  },
  "homepage": "https://gitlab.com/LowieHuyghe/edmunds-js-instance#README",
  "dependencies": {
    "body-parser": "^1.18.2",
    "edmunds": "^0.0.3",
    "errorhandler": "^1.5.0",
    "sql.js": "^0.5.0",
    "typeorm": "^0.1.11"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.0.10",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.11.0",
    "@types/mocha": "^2.2.45",
    "@types/node": "^8.5.2",
    "chai": "^4.1.2",
    "mocha": "^4.0.1",
    "nodemon": "^1.14.11",
    "nyc": "^11.4.1",
    "source-map-support": "^0.5.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.6.2"
  }
}
