{
  "name": "edmunds-instance",
  "version": "0.0.1",
  "description": "Instance for Edmunds",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "src": "src"
  },
  "scripts": {
    "start": "nodemon --watch src --ext ts --exec npm run server:dev",
    "server:dev": "node --require ts-node/register --require source-map-support/register $NODE_DEBUG_OPTION src/index.ts",
    "server:stag": "NODE_ENV=staging node --require ts-node/register --require source-map-support/register $NODE_DEBUG_OPTION src/index.ts",
    "server:prod": "npm run tsc && NODE_ENV=production node dist/index.js",
    "cli": "ts-node src/cli.ts",
    "db:migrations:run": "typeorm migrations:run",
    "db:migrations:revert": "typeorm migrations:revert",
    "db:seed": "npm run cli -- db:seed",
    "tsc": "rm -rf dist && tsc",
    "tsc:watch": "rm -rf dist && tsc --watch",
    "lint": "tslint -c tslint.json --exclude '**/*.d.ts' --exclude 'node_modules/**/*.ts' '**/*.ts'",
    "lint:watch": "nodemon --ext ts --exec npm run lint",
    "test": "NODE_ENV=testing mocha --opts mocha.opts $NODE_DEBUG_OPTION '**/*.spec.ts'",
    "test:cover": "NODE_ENV=testing nyc mocha --opts mocha.opts $NODE_DEBUG_OPTION '**/*.spec.ts'",
    "test:watch": "NODE_ENV=testing mocha --watch --opts mocha.opts $NODE_DEBUG_OPTION '**/*.spec.ts'"
  },
  "dependencies": {
    "@godaddy/terminus": "^2.2.0",
    "app-root-path": "^2.0.1",
    "body-parser": "^1.18.3",
    "edmunds": "^0.2.1",
    "errorhandler": "^1.5.0",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.3",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.0",
    "@types/faker": "^4.1.2",
    "@types/mocha": "^5.2.1",
    "@types/node": "^10.3.1",
    "chai": "^4.1.2",
    "faker": "^4.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "nyc": "^12.0.2",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.9.1"
  }
}
